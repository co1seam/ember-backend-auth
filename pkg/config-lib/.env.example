# Пример файла .env для приложения
# Скопируйте этот файл в .env и измените значения по необходимости

# Основные настройки приложения
APP_ENV=development
APP_NAME=MyApp
APP_LOG_LEVEL=debug
APP_VERSION=1.0.0

# Настройки сервера
HOST=localhost
PORT=8080
SERVER_READ_TIMEOUT=5s
SERVER_WRITE_TIMEOUT=10s
SERVER_DEBUG=true
SERVER_MAX_REQUEST_SIZE_MB=10

# Настройки CORS
SERVER_CORS_ALLOWED_ORIGINS=http://localhost:3000,https://example.com
SERVER_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
SERVER_CORS_ALLOWED_HEADERS=Content-Type,Authorization
SERVER_CORS_MAX_AGE=86400

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=myapp
DB_SSL=false
DB_TIMEOUT=10
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=5m
DB_MAX_LIFETIME=1h

# Настройки Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=5
REDIS_MAX_IDLE=10
REDIS_MAX_ACTIVE=100

# Настройки аутентификации
AUTH_TOKEN_EXPIRY=60
AUTH_JWT_SECRET=your-secret-key
AUTH_JWT_ALGORITHM=HS256
AUTH_PASSWORD_ALGORITHM=bcrypt
AUTH_PASSWORD_COST=10

# Активные функциональности
FEATURES=auth,api,admin,metrics

# Настройки для мониторинга и телеметрии
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_ENDPOINT=/metrics
MONITORING_THRESHOLDS_RESPONSE_TIME_MS=500
MONITORING_THRESHOLDS_ERROR_RATE_PERCENT=1.0
MONITORING_THRESHOLDS_CPU_USAGE_PERCENT=80.0
MONITORING_THRESHOLDS_MEMORY_USAGE_PERCENT=80.0 